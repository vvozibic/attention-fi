  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "devDependencies": {
    "@types/http-proxy-middleware": "^1.0.0",
    "concurrently": "^9.1.2"
  },
  "dependencies": {
    "http-proxy-middleware": "^3.0.5"
  },
  "optionalDependencies":  {  
    "@rollup/rollup-linux-x64-gnu": "4.9.5"
  }
}
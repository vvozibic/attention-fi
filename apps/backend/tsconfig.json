{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": false, //
    "noImplicitAny": false, //
    "skipLibCheck": true //
  },

  "include": ["src"]
}

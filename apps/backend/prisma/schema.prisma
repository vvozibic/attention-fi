generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String
}

model Influencer {
  id         Int        @id @default(autoincrement())
  name       String
  handle     String     @unique
  avatar     String?
  followers  Int?
  engagement Float?
  mentions   Mention[]
}

model Project {
  id       Int        @id @default(autoincrement())
  name     String
  symbol   String     @unique
  category String?
  links    String?     // fixed: was String[]
  mentions Mention[]
}

model Mention {
  id           Int         @id @default(autoincrement())
  influencer   Influencer @relation(fields: [influencerId], references: [id])
  influencerId Int
  project      Project    @relation(fields: [projectId], references: [id])
  projectId    Int
  tweetId      String
  date         DateTime
  type         String
}
